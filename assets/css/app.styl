@import 'nib'
@import '../../node_modules/jeet/stylus/jeet/*'
@import '_mixins.styl'

// Media queries
$xl = 1600px
$lg = 1260px
$md = 1023px
$sm = 767px

// Colors
$primary ?= #fff
$secondary ?= #000
$accent ?= #ff0000

// Metrics
$padding = 3rem
$paddingmobile = 1.5rem
$kinetic = cubic-bezier(0.77, 0, 0.175, 1)

// CSS Reset
global-reset()

webfont('LarsBold', 'LarsBold', true, 'normal')

body,html
	width 100%
	-webkit-text-size-adjust 100%
	background $primary

html
	font-size 62.5%
	+below($md)
		font-size 50%
	+above($xl)
		font-size .55vw

body
	text-rendering optimizeLegibility
	font-smoothing()
	font-family 'LarsBold'
	font-size 2rem
	overflow-x hidden

body::before, body::after
	content ''
	position fixed
	top 0
	width 55%
	height 100%
	background $secondary
	transition(transform 1s $kinetic)
	z-index 10
	backface()

body::before
	left 0
	transform(translateX(-100%))

body::after
	right 0
	transform(translateX(100%))

body.page::before, body.page::after
	transform(none)

img.lazyimg
	transition(filter 400ms ease)
	//opacity 0.4
	filter(blur(20px))

img.lazyimg.lazyloaded
	opacity 1
	filter(none)

p, h1, h2
	margin-bottom 1em
	line-height 105%

p:last-child
	margin-bottom 0

::selection
	background $secondary
	
::-moz-selection
	background $secondary

*
	hideselect()
	box-sizing(border-box)

::-webkit-scrollbar
	width 0px
	background transparent

a, a:hover, a:visited, a:focus
	color inherit
	text-decoration none
	cursor pointer

.x
	flexbox()

.xafe
	align-items flex-end

.xas
	align-items stretch

#outdated
	display none
	text-align center
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background $primary
	z-index 1100
	a
		border-bottom 1px solid
	.inner
		padding 15% 20%

.no-js, .no-svg, .no-flexbox
	#outdated
		display block

.row
	span(1)
	+below($md)
		display block
		margin-bottom 1em

.row:last-child
	margin-bottom 0

.col-2
	col(1/2, gutter: 10)
	+below($md)
		stack()

.kirby-plugin-oembed__thumb>img
	transition(filter 300ms ease)
	opacity 1
	max-width 140px

.kirby-plugin-oembed__thumb:hover>img
	filter(drop-shadow(0 0 6px alpha($secondary,0.5)))

.kirby-plugin-oembed--video
	background $secondary

